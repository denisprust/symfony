<!-- Modal -->
<div class="modal fade" id="modal-vehicle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Entrar em contato com {{ user.name }} ({{ user.username }})</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="modal-vehicle">
                    <input type="hidden" name="user_id" id="user_id" value="{{ user.id }}">
                    <div class="row">
                        <div class="col-xs-12">
                            <label for="description"><b>Mensagem:</b></label>
                            <textarea name="message" id="message" class="form-control"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal"><i class="fa fa-times"></i> Fechar</button>
                <button type="button" class="btn btn-outline-success" onclick="Vehicles.openModalContact(this)" data-user="{{ vehicle.userId }}"><i class="fa fa-phone"></i> Entrar em Contato</button>
            </div>
        </div>
    </div>
</div>