<!-- Modal -->
<div class="modal fade" id="modal-contact" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Entrar em contato com {{ user.name }} ({{ user.username }})</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form id="form-modal-contact">
                        <input type="hidden" name="user_id" id="user_id" value="{{ user.id }}">
                        <div class="row">
                            <div class="col-12">
                                <span><b>Telefone para contato:</b> {{ user.phone }}</span>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <label for="description"><b>Mensagem:</b></label>
                                <textarea name="message" id="message" class="form-control"></textarea>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal"><i class="fa fa-times"></i> Cancelar</button>
                <button type="button" class="btn btn-outline-success" onclick="Home.enviarContato()" data-user="{{ user.id }}"><i class="fa fa-check"></i> Enviar</button>
            </div>
        </div>
    </div>
</div>